{% extends "base.twig" %}

{% block title %}Welcome back!{% endblock %}

{# Turn off the sign in button when already on the sign in page #}
{% set show_sign_in = false %}

{% block content %}
<div class="site clearfix">
	<div data-pjax-container="" class="context-loader-container" id="site-container">
		<div id="login" class="auth-form">
			<form method="post" action="/session" accept-charset="UTF-8">
				<div style="margin:0;padding:0;display:inline">
					<input type="hidden" value="SWtW8lXma87kNu1OVSV+ARuXv6ytQvuiab01CObNKWw=" name="authenticity_token">
				</div>
				<div class="auth-form-header">
					<h1>Sign in</h1>
				</div>
				<div class="auth-form-body">
					<label for="login_field">Username or Email</label>
					<input type="text" tabindex="1" name="login" id="login_field" class="input-block" autofocus="autofocus" autocapitalize="off">
					<label for="password">Password <a href="/sessions/forgot_password">(forgot password)</a></label>
					<input type="password" tabindex="2" name="password" id="password" class="input-block">
					<input type="submit" value="Sign in" tabindex="3" name="commit" class="button">
				</div>
			</form>
		</div>
	</div>
</div>		
{% endblock %}